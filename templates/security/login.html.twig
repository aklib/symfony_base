{% extends 'login.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form class="form" id="kt_login_signin_form" method="post">

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-group mb-5 validated">
            <input type="email" placeholder="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="form-group mb-5 validated">
            <input type="password" placeholder="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <div class="row">
            <div class="form-group mb-5 col-md-6 text-left">
                <label class="checkbox">
                    <input type="checkbox" name="_remember_me">
                    <span></span>&nbsp;
                    {% trans %}Remember me{% endtrans %}
                </label>
            </div>
            <div class="form-group mb-5 col-md-6 text-right">
                <a class="" href="{{ path('app_forgot_password_request') }}">
                    {% trans %}Forgot Password{% endtrans %}?
                </a>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
        <div class="form-group mb-5 validated">
            <button class="btn btn-lg btn-primary float-left" type="submit">
                {% trans %}Sign in{% endtrans %}
            </button>
        </div>

    </form>
{% endblock %}
